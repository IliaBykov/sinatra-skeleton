 <div class="container">
            <div class="welcome">
            <div class="welcome1">
            <div class="welcome2">Profile</div>
            <form method="post" action="/profile/edit">
              <div class="form-group">
                <label for="username">Name</label>
                <input type="text" class="form-control" name="username" id="username" placeholder="Enter your name" value="<%= @current_user.username %>">
              </div>
              <div class="form-group">
                <label for="Gender">Gender</label>
                <br>
                <input type="radio" name="sex" id="male" value="male" checked><label for="male" class="sex">Male</label>
                <input type="radio" name="sex" id="female" value="female"><label for="female" class="sex">Female</label>
              </div>
              <div class="form-group">
                <label for="Email">Email address</label>
                <input type="email" class="form-control" id="Email"name="Email" placeholder="Enter email" value="<%= @current_user.email %>">
              </div>
              <div class="form-group">
                <label for="Password">Password</label>
                <input type="password" class="form-control" id="Password" name="Password" placeholder="Enter password" value="<%= @current_user.password %>">
              </div>
              <br>
              <button type="submit" class="btn btn-success">Update</button>
            </form>
            </div>
            </div>
        </div>